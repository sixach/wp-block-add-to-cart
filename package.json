{
	"name": "@sixa/wp-block-add-to-cart",
	"version": "1.0.0",
	"description": "Add to Cart block for WordPress editor.",
	"keywords": [
		"add-to-cart",
		"woocommerce",
		"ecommerce"
	],
	"homepage": "https://github.com/sixach/wp-block-add-to-cart#readme",
	"bugs": {
		"url": "https://github.com/sixach/wp-block-add-to-cart/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sixach/wp-block-add-to-cart.git"
	},
	"license": "GPL-3.0-or-later",
	"author": "sixa AG",
	"main": "build/index.js",
	"scripts": {
		"dev": "wp-scripts start",
		"build": "wp-scripts build",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:css-fix": "wp-scripts lint-style --fix",
		"lint:js": "wp-scripts lint-js",
		"lint:js-fix": "wp-scripts lint-js --fix",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "composer lint:php",
		"lint:wpcs": "composer lint:wpcs",
		"lint:wpcs-fix": "composer lint:wpcbf",
		"packages-update": "wp-scripts packages-update"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.css": [
			"npm run lint:css"
		],
		"*.{js,ts,tsx}": [
			"npm run lint:js",
			"npm run format:js"
		],
		"*.php": [
			"npm run lint:wpcs"
		]
	},
	"dependencies": {
		"@sixach/wp-block-components": "^0.1.1",
		"@wordpress/api-fetch": "^5.1.0",
		"@wordpress/block-editor": "^6.1.0",
		"@wordpress/blocks": "^9.1.0",
		"@wordpress/components": "^14.1.0",
		"@wordpress/compose": "^4.1.0",
		"@wordpress/data": "^5.1.0",
		"@wordpress/dom-ready": "^3.1.0",
		"@wordpress/element": "^3.1.0",
		"@wordpress/escape-html": "^2.1.0",
		"@wordpress/hooks": "^3.1.0",
		"@wordpress/i18n": "^4.1.0",
		"@wordpress/icons": "^4.0.0",
		"@wordpress/primitives": "^2.1.0",
		"@wordpress/url": "^3.1.0"
	},
	"devDependencies": {
		"@sixach/wp-block-utils": "^0.1.2",
		"@wordpress/scripts": "16.1.2",
		"autoprefixer": "10.2.6",
		"classnames": "2.3.1",
		"husky": "^6.0.0",
		"lint-staged": "11.0.0",
		"lodash": "4.17.21",
		"postcss": "8.3.4",
		"postcss-nested": "5.0.5",
		"postcss-nested-ancestors": "2.0.0",
		"postcss-selector-replace": "1.0.2"
	}
}
